{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "./lib",
    "strict": true,
  },
  "baseUrl": "./",
  "paths": {
    "@typings": ["src/types"],
    "@typings/*": ["src/types/*"],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["lib", "node_modules", "test"]
}
